<div class="row ">
    <div class="col s12">
        <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Flotas</a></li>
        <li class="tab col s3"><a href="#test2">Buses</a></li>
        <li class="tab col s3"><a href="#test3">Envios</a></li>
        <li class="tab col s3"><a href="#test4">Usuarios</a></li>
        </ul>
    </div>
    <div id="test1" class="col s12">
        <table class="highlight centered">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Ciudad</th>
                <th>Acciones</th>
            </tr>
            </thead>

            <tbody>
            <% @fleets.each do |fleet| %>
                <tr>
                    <td><%= fleet.name%></td>
                    <td><%=fleet.city.name%></td>
                    <td>
                        <a id="delete_fleets_<%=fleet.id%>" class="btn-floating blue delete-button"><i class="material-icons">delete</i>
                    </td>
                </tr>
            <% end %>            
            </tbody>
        </table>
    </div>
    <div id="test2" class="col s12">
        <table class="highlight centered">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Flota</th>
                <th>Acciones</th>
            </tr>
            </thead>

            <tbody>
            <% @buss.each do |bus| %>
                <tr>
                    <td><%= bus.license_plate%></td>
                    <td><%=bus.fleet.nil? ? "sin flota" : bus.fleet.name%></td>
                    <td>
                        <a id="delete_bus_<%=bus.id%>" class="btn-floating blue delete-button"><i class="material-icons">delete</i>
                    </td>
                </tr>
            <% end %>            
            </tbody>
        </table>
    </div>
    <div id="test3" class="col s12">Test 3</div>
    <div id="test4" class="col s12">
        <table class="highlight centered">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Flota</th>
                <th>Acciones</th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.full_name%></td>
                    <td><%=user.role == 1 ? "Admin" : "Cliente"  %></td>
                    <td>
                        <% if current_user != user %>
                            <a id="delete_user_<%=user.id%>" class="btn-floating blue delete-button"><i class="material-icons">delete</i>
                        <% end %>
                    </td>
                </tr>
            <% end %>            
            </tbody>
        </table>
    </div>

</div>